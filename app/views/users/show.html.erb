<% provide(:title, @user.name) %>
<div class="container">
  <aside class="col-md-4">
    <section class="user_info">
      <%= render 'shared/user_info', user: @user %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3><%= pluralize @user.microposts.count, 'micropost' %></h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
