<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <ul>
        <strong>
          Found <%= pluralize(@user.errors.count, 'error') %>:
        </strong>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
